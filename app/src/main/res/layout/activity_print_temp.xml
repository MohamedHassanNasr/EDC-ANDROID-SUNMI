<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="18dp">

    <LinearLayout
        android:id="@+id/print_content"
        android:layout_width="35mm"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:background="@color/colorBackground">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:src="@drawable/yokke_print" />

        <TextView
            android:id="@+id/print_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/arialnarrowbold"
            android:text="@string/print_id"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="9sp"
            android:layout_marginStart="50dp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/arialnarrowbold"
                android:gravity="start"
                android:text="@string/print_tid"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="8sp"/>

            <TextView
                android:id="@+id/tvMid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/arialnarrowbold"
                android:text="@string/print_mid"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="8sp"
                android:textAlignment="textEnd"
                android:layout_marginRight="35dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="0dp">

            <TextView
                android:id="@+id/tvCardType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/arialnarrowbold"
                android:gravity="start"
                android:text="card type:MASTER OFFUS"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="8sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="0dp">

            <TextView
                android:id="@+id/tvNumCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:fontFamily="@font/arialnarrowbold"
                android:textAllCaps="true"
                android:text="5243 2503 0126 7438"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvSearchCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:fontFamily="@font/arialnarrowbold"
                android:gravity="start"
                android:text="DIP"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvExpDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/arialnarrowbold"
                android:textAllCaps="true"
                android:text="03/21"
                android:textColor="@color/black"
                android:textSize="8sp"
                android:textAlignment="textStart"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="0dp">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/arialnarrowbold"
                android:gravity="start"
                android:text="@string/print_sale"
                android:textAllCaps="true"
                android:textSize="8sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="0dp">

            <TextView
                android:id="@+id/tvBatch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/arialnarrowbold"
                android:gravity="start"
                android:text="@string/print_batch"
                android:textAllCaps="true"
                android:textSize="8sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvTrace"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/arialnarrowbold"
                android:text="@string/print_trace"
                android:textAllCaps="true"
                android:textSize="8sp"
                android:textColor="@color/black"
                android:textAlignment="textEnd"
                android:layout_marginRight="35dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="0dp">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/arialnarrowbold"
                android:gravity="start"
                android:text="@string/print_date"
                android:textAllCaps="true"
                android:textSize="8sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/arialnarrowbold"
                android:text="@string/print_time"
                android:textAllCaps="true"
                android:textSize="8sp"
                android:textColor="@color/black"
                android:textAlignment="textEnd"
                android:layout_marginRight="35dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="0dp">

            <TextView
                android:id="@+id/tvReffNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/arialnarrowbold"
                android:gravity="start"
                android:textAllCaps="true"
                android:textSize="8sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvAppr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/arialnarrowbold"
                android:text="@string/print_appr"
                android:textAllCaps="true"
                android:textSize="8sp"
                android:textColor="@color/black"
                android:textAlignment="textEnd"
                android:layout_marginRight="35dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="0dp">

            <TextView
                android:id="@+id/tvBase"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arialnarrowbold"
                android:gravity="start"
                android:text="TOTAL"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/arialnarrowbold"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:text="Rp 100.000.000"
                android:textColor="@color/black"
                android:textAlignment="textEnd"
                android:layout_marginRight="35dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="0dp">

            <TextView
                android:id="@+id/tvTip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/arialnarrowbold"
                android:gravity="start"
                android:text="tip"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/arialnarrowbold"
                android:text="-------------"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="textEnd"
                android:layout_marginRight="35dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvSignature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/arialnarrowbold"
                android:text="@string/print_signature"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="10sp"
                android:layout_marginStart="50dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonPrintLyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/print_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_20">

        <Button
            android:id="@+id/button_print_struct_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:backgroundTint="@color/yokke"
            android:text="PRINT" />
    </LinearLayout>

</RelativeLayout>