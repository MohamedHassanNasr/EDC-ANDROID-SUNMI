<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sm.sdk.yokkeedc.initialize.InitFinishActivity"
    tools:ignore="InvalidId"
    android:layout_margin="80dp">

    <LinearLayout
        android:id="@+id/print_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_merchant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textAlignment="center"
            android:text="MERCHANT NAME"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/text_merchant_addr_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:textAlignment="center"
            android:text="MERCHANT ADDRESS 1"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/text_merchant_addr_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:textAlignment="center"
            android:text="MERCHANT ADDRESS 2"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/text_merchant_addr_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:textAlignment="center"
            android:text="MERCHANT ADDRESS 3"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_tid_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="TID : "
                android:textSize="10sp" />

            <TextView
                android:id="@+id/text_tid_value"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/text_mid_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="MID : "
                android:textSize="10sp" />

            <TextView
                android:id="@+id/text_mid_value"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:textSize="10sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_aja"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:text="INITIALIZE SUCCESS"
            android:textSize="10sp"
            android:textStyle="bold" />


    </LinearLayout>

</RelativeLayout>